<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
	<groupId>org.jenkins-ci.plugins</groupId>    
	<artifactId>plugin</artifactId>    
	<version>1.398</version>  
  </parent>  
  
  <groupId>org.jenkins-ci.plugins</groupId>
  <artifactId>integrity-plugin</artifactId>
  <name>MKS Integrity CM - Jenkins Plugin</name>
  <version>1.4-SNAPSHOT</version>
  <packaging>hpi</packaging>

  <url>http://wiki.jenkins-ci.org/display/JENKINS/MKS+Integrity+Plugin</url>

  <developers>
    <developer>
      <id>cdsouza</id>
      <name>Cletus D'Souza</name>
      <email>Cletus.D'Souza@mks.com</email>
    </developer>
  </developers>
	
  <scm>
	<connection>scm:git:ssh://github.com/jenkinsci/integrity-plugin.git</connection>
	<developerConnection>scm:git:ssh://git@github.com/jenkinsci/integrity-plugin.git </developerConnection>
	<url>https://github.com/jenkinsci/integrity-plugin</url>
  </scm>
  
  <dependencies>
   	<dependency>
  		<groupId>com.mks.api</groupId>
  		<artifactId>mksapi-jar</artifactId>
  		<version>4.10.5799</version>
  		<scope>compile</scope>
   	</dependency>
  </dependencies>
  <dependencyManagement>
  	<dependencies>
  	</dependencies>
  </dependencyManagement>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <distributionManagement>
    <repository>
      <id>maven.jenkins-ci.org</id>
      <url>http://maven.jenkins-ci.org:8081/content/repositories/releases/</url>
    </repository>
  </distributionManagement>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>
  
  <repositories>
	<repository>
		<id>maven.jenkins-ci.org</id>
		<url>http://maven.jenkins-ci.org/content/repositories/releases</url>
	</repository>
  </repositories>
</project>
